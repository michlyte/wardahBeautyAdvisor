<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.event.CreateEventActivity">

    <View
        android:id="@+id/vEventName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivEventName"
        android:layout_width="49dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/vEventName"
        app:layout_constraintStart_toStartOf="@+id/vEventName"
        app:layout_constraintTop_toTopOf="@+id/vEventName"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal" />

    <EditText
        android:id="@+id/etEventName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="@string/placeholder_event_name"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/vEventName"
        app:layout_constraintEnd_toEndOf="@+id/vEventName"
        app:layout_constraintStart_toEndOf="@+id/ivEventName"
        app:layout_constraintTop_toTopOf="@+id/vEventName" />

    <View
        android:id="@+id/vEventCategory"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vEventName" />

    <ImageView
        android:id="@+id/ivEventCategory"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/vEventCategory"
        app:layout_constraintStart_toStartOf="@+id/vEventCategory"
        app:layout_constraintTop_toTopOf="@+id/vEventCategory"
        app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal" />

    <EditText
        android:id="@+id/etEventCateogory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="@string/placeholder_event_category"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/vEventCategory"
        app:layout_constraintEnd_toEndOf="@+id/vEventCategory"
        app:layout_constraintStart_toEndOf="@+id/ivEventCategory"
        app:layout_constraintTop_toTopOf="@+id/vEventCategory" />
</android.support.constraint.ConstraintLayout>